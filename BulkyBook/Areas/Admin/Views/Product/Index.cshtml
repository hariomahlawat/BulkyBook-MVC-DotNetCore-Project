
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row">
        <div class="col-6">   
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">   
            <a class="btn btn-primary " asp-controller="Product" asp-action="Upsert">&nbsp;<i class="fa-solid fa-circle-plus"></i> Create New Product</a>
        </div>
    </div>


<table id="productTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            @*<th>Author</th>
            <th>Category</th>*@
        </tr>
    </thead>
</table>
</div>

@section Scripts{
    <script src = "~/js/product.js"></script> 
}