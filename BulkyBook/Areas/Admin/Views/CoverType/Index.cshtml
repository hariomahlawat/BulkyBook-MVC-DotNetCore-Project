@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row">
        <div class="col-6">   
            <h2>Cover Type List</h2>
        </div>
        <div class="col-6 text-end">   
            <a class="btn btn-primary " asp-controller="CoverType" asp-action="Create">&nbsp;<i class="fa-solid fa-circle-plus"></i> Create New Cover Type</a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Cover Type Id
            </th>
            <th>
                Cover Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Id
                </td>
                <td width="30%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="fa-solid fa-pencil"></i> Edit</a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="fa-solid fa-trash "></i> Delete</a>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
</div>